@page "/chat"

<AuthorizeView Roles="Player,Builder,Admin,Owner">
  <Authorized>
    <div class="form-group">
      <label>
          Message:
          <input @bind="messageInput" size="50" />
      </label>
    </div>
    <button @onclick="Send" disabled="@(!IsConnected)">Send</button>

    <hr>

    <ul id="messagesList">
        @foreach (var message in messages)
        {
            <li>@message</li>
        }
    </ul>
  </Authorized>
</AuthorizeView>
